<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/circale_card"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/ll_addaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@drawable/top_round_corner"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroyregular"
                android:text="Enter Complete Information"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_green_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:hint="House Name *"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iclogo">

                    <EditText
                        android:id="@+id/et_houseName"
                        tools:ignore="LabelFor"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/gilroyregular"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_complete"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:hint="House Address*"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iclogo">

                    <EditText
                        android:id="@+id/et_houseAddress"
                        tools:ignore="LabelFor"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/gilroyregular"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/til_floor"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="6dp"
                       android:layout_weight="1.3"
                       android:layout_marginEnd="2dp"
                       android:hint="Floor"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/iclogo">

                       <EditText
                           android:id="@+id/et_floor"
                           tools:ignore="LabelFor"
                           android:layout_width="match_parent"
                           android:layout_height="42dp"
                           android:fontFamily="@font/gilroyregular"
                           android:inputType="number"
                           android:maxLength="2"
                           android:singleLine="true"
                           android:textSize="14sp" />
                   </com.google.android.material.textfield.TextInputLayout>
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/til_unit"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="6dp"
                       android:layout_weight="1"
                       android:layout_marginStart="2dp"
                       android:layout_marginEnd="2dp"
                       android:hint="Unit"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/iclogo">

                       <EditText
                           android:id="@+id/et_unit"
                           tools:ignore="LabelFor"
                           android:layout_width="match_parent"
                           android:layout_height="42dp"
                           android:maxLength="2"
                           android:fontFamily="@font/gilroyregular"
                           android:inputType="number"
                           android:singleLine="true"
                           android:textSize="14sp" />
                   </com.google.android.material.textfield.TextInputLayout>
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/til_prefix"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="6dp"
                       android:layout_weight="1"
                       android:layout_marginStart="2dp"
                       android:hint="Unit in One Floor"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/iclogo">

                       <EditText
                           android:id="@+id/et_prfix"
                           tools:ignore="LabelFor"
                           android:layout_width="match_parent"
                           android:layout_height="42dp"
                           android:fontFamily="@font/gilroyregular"
                           android:inputType="number"
                           android:maxLength="2"
                           android:singleLine="true"
                           android:textSize="14sp" />
                   </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Room Information"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/color_green_2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:hint="Room"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iclogo">

                        <EditText
                            android:id="@+id/et_room"
                            tools:ignore="LabelFor"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:fontFamily="@font/gilroyregular"
                            android:inputType="number"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:hint="Toilet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iclogo">

                        <EditText
                            android:id="@+id/et_toilet"
                            tools:ignore="LabelFor"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:fontFamily="@font/gilroyregular"
                            android:inputType="number"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_bal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:hint="Balcony"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iclogo">

                        <EditText
                            android:id="@+id/et_balcony"
                            tools:ignore="LabelFor"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:fontFamily="@font/gilroyregular"
                            android:inputType="number"
                            android:maxLength="2"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Rent Information"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/color_green_2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:hint="Rent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iclogo">

                        <EditText
                            android:id="@+id/et_rent"
                            tools:ignore="LabelFor"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:fontFamily="@font/gilroyregular"
                            android:inputType="number"
                            android:maxLength="8"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_landmark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:hint="Landmark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iclogo">

                    <EditText
                        android:id="@+id/et_location"
                        tools:ignore="LabelFor"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/gilroyregular"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/color_green_2"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>